

<% content_for :page_title, "Changer le mot de passe" %>

<div class="row justify-content-center">
  <div class="col-md-6 col-lg-5">
    <div class="card shadow-sm">
      <div class="card-header bg-white py-3">
        <h4 class="card-title mb-0 text-center">Changer votre mot de passe</h4>
      </div>
      <div class="card-body p-4">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "needs-validation" }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <%= f.hidden_field :reset_password_token %>

          <div class="mb-3">
            <%= f.label :password, "Nouveau mot de passe", class: "form-label" %>
            <div class="input-group">
              <span class="input-group-text"><i class="fas fa-lock"></i></span>
              <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control", placeholder: "••••••••" %>
            </div>
            <div class="form-text">Minimum <%= @minimum_password_length %> caractères.</div>
          </div>

          <div class="mb-4">
            <%= f.label :password_confirmation, "Confirmer le nouveau mot de passe", class: "form-label" %>
            <div class="input-group">
              <span class="input-group-text"><i class="fas fa-lock"></i></span>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "••••••••" %>
            </div>
          </div>

          <div class="d-grid gap-2">
            <%= f.submit "Changer mon mot de passe", class: "btn btn-primary btn-lg" %>
          </div>
        <% end %>
      </div>
      <div class="card-footer bg-white py-3 text-center">
        <p class="mb-0">
          <%= link_to "Retour à la connexion", new_session_path(resource_name), class: "text-decoration-none" %>
        </p>
      </div>
    </div>
  </div>
</div>
