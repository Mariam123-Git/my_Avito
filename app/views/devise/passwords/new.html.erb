
<% content_for :page_title, "Mot de passe oublié" %>

<div class="row justify-content-center">
  <div class="col-md-6 col-lg-5">
    <div class="card shadow-sm">
      <div class="card-header bg-white py-3">
        <h4 class="card-title mb-0 text-center">Réinitialiser le mot de passe</h4>
      </div>
      <div class="card-body p-4">
        <p class="text-muted mb-4">Entrez votre adresse email et nous vous enverrons un lien pour réinitialiser votre mot de passe.</p>
        
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "needs-validation" }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="mb-4">
            <%= f.label :email, class: "form-label" %>
            <div class="input-group">
              <span class="input-group-text"><i class="fas fa-envelope"></i></span>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "votre@email.com" %>
            </div>
          </div>

          <div class="d-grid gap-2">
            <%= f.submit "Envoyer les instructions", class: "btn btn-primary btn-lg" %>
          </div>
        <% end %>
      </div>
      <div class="card-footer bg-white py-3 text-center">
        <p class="mb-0">
          <%= link_to "Retour à la connexion", new_session_path(resource_name), class: "text-decoration-none" %>
        </p>
      </div>
    </div>
  </div>
</div>