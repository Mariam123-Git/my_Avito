<% content_for :page_title, "Connexion" %>

<div class="container-fluid  py-5">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <div class="card shadow rounded-4 border-0">
        <div class="card-header bg-white text-center py-4 border-0">
          <h2 class="mb-1">Connexion</h2>
          <p class="text-muted mb-0">Accédez à votre compte</p>
        </div>

        <div class="card-body p-4">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "needs-validation" }) do |f| %>

            <!-- Email -->
            <div class="mb-4">
              <%= f.label :email, class: "form-label" %>
              <div class="input-group">
                <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "votre@email.com" %>
              </div>
            </div>

            <!-- Password -->
            <div class="mb-4">
              <%= f.label :password, "Mot de passe", class: "form-label" %>
              <div class="input-group">
                <span class="input-group-text"><i class="fas fa-lock"></i></span>
                <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "••••••••" %>
              </div>
              <div class="text-end mt-2">
                <%= link_to "Mot de passe oublié ?", new_password_path(resource_name), class: "small text-decoration-none" %>
              </div>
            </div>

            <!-- Remember me -->
            <% if devise_mapping.rememberable? %>
              <div class="form-check mb-4">
                <%= f.check_box :remember_me, class: "form-check-input" %>
                <%= f.label :remember_me, "Se souvenir de moi", class: "form-check-label" %>
              </div>
            <% end %>

            <!-- Submit -->
            <div class="d-grid">
              <%= f.submit "Connexion", class: "btn btn-primary btn-lg rounded-pill" %>
            </div>

          <% end %>
        </div>

        <div class="card-footer bg-white text-center py-3 border-0">
          <p class="mb-0">
            Pas encore inscrit ? 
            <%= link_to "Créer un compte", new_registration_path(resource_name), class: "fw-bold text-decoration-none" %>
          </p>
        </div>
      </div>

      <div class="text-center mt-4">
        <p class="text-muted small">
          En vous connectant, vous acceptez nos 
          <a href="#" class="text-decoration-none">Conditions d'utilisation</a> et notre 
          <a href="#" class="text-decoration-none">Politique de confidentialité</a>.
        </p>
      </div>
    </div>
  </div>
</div>
