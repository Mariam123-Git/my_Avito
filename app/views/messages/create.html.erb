<%= form_with(model: @message, url: messages_path, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :content, "Votre message" %>
    <%= form.text_area :content, class: "form-control", rows: 3 %>
  </div>

  <div class="form-group">
    <%= form.hidden_field :sender_id, value: current_user.id %>
    <%= form.hidden_field :recipient_id, value: @recipient.id %>
    <%= form.hidden_field :listing_id, value: @listing.id %> <!-- Si vous voulez associer le message à une annonce spécifique -->

    <%= form.submit "Envoyer", class: "btn btn-primary" %>
  </div>
<% end %>
