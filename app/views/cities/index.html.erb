<div class="container">
  <h1 class="mb-4">Toutes les villes</h1>
  
  <div class="row">
    <% @regions.each do |region| %>
      <div class="col-md-4 mb-4">
        <div class="card shadow-sm h-100">
          <div class="card-header bg-white">
            <h4 class="mb-0">
              <i class="fas fa-map me-2 text-primary"></i>
              <%= region.name %>
            </h4>
          </div>
          <div class="card-body">
            <ul class="list-unstyled">
              <% region.cities.order(:name).each do |city| %>
                <li class="mb-2">
                  <%= link_to city.name, city_path(city), class: "text-decoration-none text-muted" %>
                  <span class="badge bg-light text-dark"><%= Listing.where(city: city).active.count %></span>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>